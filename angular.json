{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "tolle": {
      "projectType": "library",
      "root": "projects/tolle",
      "sourceRoot": "projects/tolle/src",
      "prefix": "tolle",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/tolle/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/tolle/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/tolle/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/tolle/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/tolle/.storybook",
            "browserTarget": "tolle:build",
            "styles": ["projects/tolle/theme.css", "node_modules/remixicon/fonts/remixicon.css"],
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/tolle"
            ],
            "port": 6006
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/tolle/.storybook",
            "browserTarget": "tolle:build",
            "styles": ["projects/tolle/theme.css", "node_modules/remixicon/fonts/remixicon.css"],
            "docs": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/tolle"
            ],
            "outputDir": "dist/storybook/tolle"
          }
        }
      }
    },
    "showcase": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/showcase",
      "sourceRoot": "projects/showcase/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/showcase",
            "index": "projects/showcase/src/index.html",
            "browser": "projects/showcase/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/showcase/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/showcase/public"
              }
            ],
            "styles": [
              "node_modules/@melloware/coloris/dist/coloris.css",
              "projects/showcase/src/styles.css",
              "projects/showcase/src/override.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kB",
                  "maximumError": "4kB"
                }
              ],
              "outputHashing": "all",
              "fileReplacements": [
                {
                  "replace": "projects/showcase/src/environments/environment.ts",
                  "with": "projects/showcase/src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "showcase:build:production"
            },
            "development": {
              "buildTarget": "showcase:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/showcase/tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/showcase/public"
              }
            ],
            "styles": [
              "projects/showcase/src/styles.css"
            ],
            "scripts": []
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/showcase/.storybook",
            "browserTarget": "showcase:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/showcase"
            ],
            "styles": [
              "projects/showcase/src/styles.css"
            ],
            "port": 6006
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/showcase/.storybook",
            "browserTarget": "showcase:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/showcase"
            ],
            "outputDir": "dist/storybook/showcase"
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
